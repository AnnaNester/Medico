        <Button x:Name="btnEspecialidade" Content="Buscar Especialidade" HorizontalAlignment="Left" Margin="226,221,0,0" VerticalAlignment="Top" Width="120" Click="btnEspecialidade_Click" Height="30"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="430,282,0,0" VerticalAlignment="Top" Width="75" Click="btnCancelar_Click"/>

    </Grid>
</Window>
